<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/title_frame"
        android:text="Test VMAX Ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <com.vserv.android.ads.api.VservAdView
        android:id="@+id/adViewBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_frame"
        android:layout_above="@id/adViewBanner"
        android:gravity="center_horizontal"
        >

        <TextView
            android:padding="16dp"
            android:id="@+id/btn_bannerview"
            android:text="Click to show the Banner ADS"
            android:textColor="#ff000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:padding="16dp"
            android:id="@+id/btn_nativebanner"
            android:text="Click to show the Native In-feed ADS"
            android:textColor="#ff000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:padding="16dp"
            android:id="@+id/btn_nativecontentstream"
            android:text="Click to show the Native Content Stream ADS"
            android:textColor="#ff000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:padding="16dp"
            android:id="@+id/btn_incentofferwall"
            android:text="Click to show the Incent Offerwall ADS"
            android:textColor="#ff000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:padding="16dp"
            android:id="@+id/btn_incentrewardedvideo"
            android:text="Click to show the Incent Rewarded Video ADS"
            android:textColor="#ff000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:padding="16dp"
            android:id="@+id/btn_videoads"
            android:text="Click to show the Video ADS"
            android:textColor="#ff000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</RelativeLayout>
